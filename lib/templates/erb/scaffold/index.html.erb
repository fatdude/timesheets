<h2><%= plural_table_name.capitalize.humanize %></h2>
<p><%%= link_to 'New <%= human_name.downcase %>', new_<%= singular_table_name %>_path, :class => 'icon_left add' %></p>
<table>
  <thead>
    <tr>
<% for attribute in attributes -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| -%>
    <tr class="<%%= cycle('odd', 'even') %>">
<% for attribute in attributes -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
      <td class="has_icon"><%%= link_to 'Show', <%= singular_table_name %>, :class => 'icon show' %></td>
      <td class="has_icon"><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'icon edit' %></td>
      <td class="has_icon"><%%= link_to 'Destroy', <%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete, :class => 'icon delete' %></td>
    </tr>
  <%% end -%>
  </tbody>
</table>
