<h2><%= singular_table_name.humanize %> details</h2>
<div class="attributes">
<% for attribute in attributes -%>
  <div class="attribute">
    <p class="name"><strong><%= attribute.human_name %></strong></p> 
    <div class="value">
      <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
    </div>
  </div>
<% end -%>
</div>

<p class="controls"><%%= link_to('Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'icon_left edit') %> | <%%= link_to('Delete', @<%= singular_table_name %>, :confirm => 'Are you sure?', :method => :delete, :class => 'icon_left delete') %></p>
