<%%= simple_form_for(@<%= singular_name %>) do |f| %>
  <%%= render 'shared/error_messages', :target => @<%= singular_name %> %>

  <div class="inputs">
  <%- attributes.each do |attribute| -%>
    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
  <%- end -%>
  </div>

  <div class="actions">
    <%%= f.button :submit %>
  </div>
<%% end %>
