<% if @project.errors.empty? -%>
  $.facebox.close();
  $.jGrowl('<%= growl %>');
  $('tr[data-id=<%= @project.id %>]').replaceWith('<%= escape_javascript(render @project) %>');
  $('tr[data-id=<%= @project.id %>] a[data-display=popup]').facebox();
  highlight_alt_rows('table#projects');
<% else -%>
  $('form.edit_project').replaceWith('<%= escape_javascript(render 'form') %>');
<% end -%>

