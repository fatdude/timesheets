<% if @contact.errors.empty? -%>
  $.facebox.close();
  $.jGrowl('<%= growl %>');
  $('table#contacts tbody').append('<%= escape_javascript(render @contact) %>');
  $('tr[data-id=<%= @contact.id %>] a[data-display=popup]').facebox();
  highlight_alt_rows('table#contacts');
<% else -%>
  $('form.new_contact').replaceWith('<%= escape_javascript(render 'form') %>');
<% end -%>

