<% if @contact.errors.empty? -%>
  $.facebox.close();
  $.jGrowl('<%= growl %>');
  $('tr[data-id=<%= @contact.id %>]').replaceWith('<%= escape_javascript(render @contact) %>');
  $('tr[data-id=<%= @contact.id %>] a[data-display=popup]').facebox();
  highlight_alt_rows('table#contacts');
<% else -%>
  $('form.edit_contact').replaceWith('<%= escape_javascript(render 'form') %>');
<% end -%>

