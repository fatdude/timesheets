<% form_for([@client, @activity]) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :project_id %><br/>
    <%= f.collection_select :project_id, @client.projects, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :hours %><br />
    <%= f.text_field :hours %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

