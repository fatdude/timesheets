<% if @client.projects.empty? -%>
  <p>You must create a project for <%= @client.name %> before continuing</p>
<% else -%>
  <% form_for [@client, @activity], :remote => true do |f| %>
    <%= render 'shared/error_messages', :target => @activity %>

    <div class="field">
      <%= f.label :project_id %><br/>
      <%= f.collection_select :project_id, @client.projects, :id, :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :hours %><br />
      <%= f.text_field :hours %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end -%>

