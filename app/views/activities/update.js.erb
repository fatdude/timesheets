<% if @activity.errors.empty? -%>
  $.facebox.close();
  $.jGrowl('<%= growl %>');
  $('tr[data-id=<%= @activity.id %>]').replaceWith('<%= escape_javascript(render @activity) %>');
  $('tr[data-id=<%= @activity.id %>] a[data-display=popup]').facebox();
  highlight_alt_rows('table#activities');
<% else -%>
  $('form.edit_activity').replaceWith('<%= escape_javascript(render 'form') %>');
<% end -%>

